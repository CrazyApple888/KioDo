<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ItemCard">
        <item name="android:layout_marginHorizontal">10dp</item>
        <item name="android:layout_marginVertical">2dp</item>
        <item name="cardCornerRadius">7dp</item>
        <item name="cardElevation">10dp</item>
        <item name="cardBackgroundColor">?attr/colorSecondary</item>
    </style>

    <style name="RepeatsCountTextStyle">
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="android:textSize">70sp</item>
    </style>

    <style name="HeaderTextStyle" parent="RepeatsCountTextStyle">
        <item name="android:textSize">35sp</item>
    </style>

    <style name="MediumTitleTextStyle" parent="HeaderTextStyle">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="DescriptionTextStyle" parent="HeaderTextStyle">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="ItemTextStyle" parent="HeaderTextStyle">
        <item name="android:textSize">15sp</item>
    </style>

    <style name="StatisticsHeaderTextStyle" parent="HeaderTextStyle">
        <item name="android:textSize">30sp</item>
    </style>

    <style name="StatisticsDescriptionTextStyle" parent="HeaderTextStyle">
        <item name="android:textSize">25sp</item>
    </style>

</resources>